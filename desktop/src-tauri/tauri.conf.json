{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "trix",
  "version": "2.0.0",
  "identifier": "com.trix.security-scanner",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "distDir": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Trix Security",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "identifier": "com.trix.app",
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}